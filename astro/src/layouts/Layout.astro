---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro"
import { ViewTransitions } from 'astro:transitions';


export interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />

        <link rel="icon" type="image/x-icon" href="/scheidler-med-NT.svg" />
        <link rel="apple-touch-icon" sizes="180x180" href="/scheidler-med-NT.svg" />
        <link rel="icon" type="image/png" sizes="32x32" href="/scheidler-med-NT.svg" />
        <link rel="icon" type="image/png" sizes="16x16" href="/scheidler-med-NT.svg" />
        <link rel="manifest" href="/site.webmanifest" />
        <link rel="mask-icon" href="/safari-pinned-tab.svg" color="#5bbad5" />
        <meta name="msapplication-TileColor" content="#da532c" />
        <meta name="theme-color" content="#ffffff" />

        <meta name="generator" content={Astro.generator} />

        <title>{title}</title>
        <ViewTransitions />
    </head>
    <body transition:animate="none">
        <Header />
        <slot transition:animate="slide"/>
        <Footer />
    </body>
</html>
