---
import Layout from '../layouts/Layout.astro'
import { getAllProviders } from '../lib/api'

const providers: { name: string; bio: string; imageUrl: string }[] = await getAllProviders()
---

<Layout title="Scheidler Medical">
    <main class="min-h-screen py-36 sm:py-48">
        <div class="mx-auto grid gap-y-20 max-w-6xl px-8 sm:px-24">
            <div class="max-w-2xl">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900 sm:text-4xl">Meet our Providers</h2>
                <p class="mt-6 text-lg leading-8 text-gray-600">
                    Our staff is compassionate, patient-oriented, and trustworthy. We will listen thoroughly to your
                    concerns and create a personal care plan that works for you.
                </p>
            </div>
            <ul role="list" class="grid gap-x-8 divide-y">
                {
                    providers.map((provider) => (
                        <li class="py-10 first:pt-0">
                            <div class="flex flex-col md:flex-row items-center gap-x-6 gap-y-8 md:gap-y-0">
                                <img class="w-full md:w-64 rounded-xl" src={provider.imageUrl} alt={provider.name} loading="lazy"/>
                                <div class="flex flex-col gap-y-2">
                                    <h3 class="text-xl sm:text-2xl font-semibold tracking-tight text-gray-900">
                                        {provider.name}
                                    </h3>
                                    <p class="text-base text-gray-800 leading-7">{provider.bio}</p>
                                </div>
                            </div>
                        </li>
                    ))
                }
            </ul>
        </div>
    </main>
</Layout>
